<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScreenListsItemContainerCardView"
    style="@style/main_screen_lists_item_card_view_style">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainScreenListsItemContainerConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/mainScreenListsItemImageView"
            style="@style/main_screen_lists_item_image_style"
            app:layout_constraintBottom_toTopOf="@id/mainScreenListsItemTitleTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mainScreenListsItemTitleTextView"
            style="@style/main_screen_lists_item_title_style"
            app:layout_constraintBottom_toTopOf="@id/mainScreenListsItemAuthorTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainScreenListsItemImageView"
            tools:text="The Lord of the Rings" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mainScreenListsItemAuthorTextView"
            style="@style/main_screen_lists_item_author_style"
            app:layout_constraintBottom_toTopOf="@id/mainScreenListsItemGradeTextView"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="J. R. R. Tolkien" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mainScreenListsItemGradeTextView"
            style="@style/main_screen_lists_item_grade_text_style"
            app:layout_constraintBottom_toBottomOf="@id/mainScreenListsItemGradeStarImageView"
            app:layout_constraintEnd_toStartOf="@id/mainScreenListsItemGradeStarImageView"
            app:layout_constraintTop_toTopOf="@id/mainScreenListsItemGradeStarImageView"
            tools:text="5.0" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/mainScreenListsItemGradeStarImageView"
            style="@style/main_screen_lists_item_grade_star_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainScreenListsItemAuthorTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>