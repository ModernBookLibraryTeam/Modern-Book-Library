<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScreenContainerNestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mainscreen.MainScreenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainScreenListsContainerConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_screen_list_container_padding">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mainScreenListTrendsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TRENDING BOOKS" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainScreenListTrendsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/mainScreenListTrendsTextView"
            app:layout_constraintTop_toBottomOf="@id/mainScreenListTrendsTextView" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mainScreenListBooksWeLoveTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/mainScreenListTrendsRecyclerView"
            app:layout_constraintTop_toBottomOf="@id/mainScreenListTrendsRecyclerView"
            tools:text="BOOKS WE LOVE" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainScreenListBooksWeLoveRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/mainScreenListBooksWeLoveTextView"
            app:layout_constraintTop_toBottomOf="@id/mainScreenListBooksWeLoveTextView" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mainScreenListReadRecentlyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/mainScreenListBooksWeLoveRecyclerView"
            app:layout_constraintTop_toBottomOf="@id/mainScreenListBooksWeLoveRecyclerView"
            tools:text="READ RECENTLY" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainScreenListReadRecentlyRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/mainScreenListReadRecentlyTextView"
            app:layout_constraintTop_toBottomOf="@id/mainScreenListReadRecentlyTextView" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mainScreenListSeasonalBooksTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/mainScreenListReadRecentlyRecyclerView"
            app:layout_constraintTop_toBottomOf="@id/mainScreenListReadRecentlyRecyclerView"
            tools:text="SEASONAL BOOKS: FALL" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainScreenListSeasonalBooksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/mainScreenListSeasonalBooksTextView"
            app:layout_constraintTop_toBottomOf="@id/mainScreenListSeasonalBooksTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>