<resources>
    <!-- Base application theme. -->
    <style name="Theme.ModernBookLibrary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cobalt_blue_600</item>
        <item name="colorPrimaryVariant">@color/cobalt_blue_800</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize my theme. -->
        <item name="emptyBackgroundColor">@color/cobalt_blue_500</item>
        <item name="emptyProfileImageColor">@color/cobalt_blue_500</item>
        <item name="addToFavoriteImageColor">@color/white</item>
    </style>
</resources>